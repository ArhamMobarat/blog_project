  <form action="/update" method="POST">
    <input type="text" name="title" value="<%= pTitle %>" class="m-3" required><br>
    <textarea name="content" rows="5" cols="50" class="m-3" required><%=pContent%></textarea><br>
    <input type="hidden" name="index" value="<%=index%>">
    <input type="submit" value="OK" class="m-3 btn btn-secondary">
  </form>
